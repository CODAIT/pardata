{
    "extends": [
        "config:base"
    ],

    "pip_requirements": {
        "fileMatch": ["requirements.*\.txt$"]
    },

    "labels": [
        "dependency update"
    ],

    "dependencyDashboard": true,

    "schedule": [
        "before 1am on Tuesday"
    ],

    "packageRules": [
        {
            "packagePatterns": [
                "*"
            ],
            "updateTypes": [
                "patch"
            ],
            // Group all minor version bump together
            "groupName": "all non-major dependencies",
            "groupSlug": "all-minor-patch"
        }
    ]
}
